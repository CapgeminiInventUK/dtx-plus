{
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "default-src 'none'; script-src 'self'; connect-src 'self' https://www.gov.uk"
  },
  "name": "DTX Plus",
  "description": "DTX Plus",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": {
      "16": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches":[
				"*://*.capgemini.com/DTX.NET/*"
			],
			"run_at": "document_start",
      "css":[
				"css/dtx-fixes.css",
				"css/dtx-additions.css"
			],
      "js": [
        "js/vendor.js"
      ]
    },
    {
      "matches":[
				"*://*.capgemini.com/DTX.NET/*"
			],
			"run_at": "document_end",
      "js": [
        "js/dtx.js"
      ]
    },
		{
			"matches":[
				"*://*.capgemini.com/DTX.NET/Summary.aspx"
			],
			"run_at": "document_idle",
			"js":[
				"js/dtx-summary.js"
			]
		},
    {
			"matches":[
				"*://*.capgemini.com/DTX.NET/Login.aspx*"
			],
			"run_at": "document_idle",
			"css":[
				"css/login-message.css"
			],
			"js":[
				"js/dtx-login.js"
			]
		},		
    {
			"matches":[
				"*://*.capgemini.com/DTX.NET/item.aspx*"
			],
			"run_at": "document_idle",
			"css":[
				"pattern-fill/pattern-fill.css"
			],
			"js":[
				"js/dtx-item.js",
				"pattern-fill/pattern-fill.js"
			]
		}
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.capgemini.com/DTX.NET/*"
  ],
  "web_accessible_resources": [{
      "resources": ["/images/*",		"/pattern-fill/*", "/js/inline/*"],
      "matches": ["<all_urls>"]
    }]
}